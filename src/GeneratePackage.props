		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<!-- å¯é€‰ï¼šæž„å»ºç¬¦å·åŒ…ï¼ˆ.snupkgï¼‰ä»¥åˆ†å‘åŒ…å«æºä»£ç é“¾æŽ¥çš„ PDB -->
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
		<PackageReadmeFile Condition="$(PackageReadmeFile) == ''">README.md</PackageReadmeFile>
	</PropertyGroup>

	<!-- ðŸ‘‡ å¼•ç”¨ SourceLink åŒ…ä¸Ž LICENSE/README æ–‡ä»¶æ”¾ç½®åŒ…å†…å®¹å†… -->
	<ItemGroup>
		<PackageReference Include="Microsoft.SourceLink.GitHub" PrivateAssets="All"/>
	</ItemGroup>

	<ItemGroup Condition="!$(MSBuildProjectName.StartsWith('BD.SteamClient8.3rdParty')) AND !$(MSBuildProjectName.StartsWith('SAM.API')) AND !$(MSBuildProjectName.StartsWith('Authenticator'))">
