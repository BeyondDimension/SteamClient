	<PropertyGroup>
		<PackageLicenseExpression Condition="$(PackageLicenseExpression) == ''">LGPL-3.0-only</PackageLicenseExpression>
		<PackageProjectUrl>https://github.com/BeyondDimension/SteamClient</PackageProjectUrl>
		<PackageIconUrl Condition="$(PackageIcon) == '' AND $(PackageIconUrl) == ''">https://avatars.githubusercontent.com/u/79355691</PackageIconUrl>
		<PackageReleaseNotes>$(PackageProjectUrl)/releases</PackageReleaseNotes>
		<RepositoryUrl>$(PackageProjectUrl).git</RepositoryUrl>
